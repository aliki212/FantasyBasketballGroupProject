<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Euroleague Fantasy Betting</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.IsInRole("AppManager"))
    {
        @Html.Partial("_NavBarAdmin")
    }
    else if (User.Identity.IsAuthenticated)
        {
            @Html.Partial("_NavBarUser")
        }
    else
    {
        @Html.Partial("_NavBar")}
    <div class="container body-content">
        @RenderBody()
        <hr />
        <!-- Footer-->
        <footer class="bg-light py-5">
            <div class="container"><div class="small text-center text-muted">Copyright &copy; @DateTime.Now.Year - Fantasy Betting</div></div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)

</body>
</html>
