@model FantasyEuroleague.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}<h2>@ViewBag.Title.</h2>@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div id="card" class="col-lg-10 col-xl-9 mx-auto">
                <div class="card card-signin flex-row my-5">
                    <div class="card-body flex-row">
                        <h5 class="card-title text-center"><strong>Sign Up</strong></h5>
                        <form class="form-signin">
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.Email, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.Email)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.Password, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.Password)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.ConfirmPassword, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.ConfirmPassword)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.FirstName, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.FirstName)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.LastName, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.LastName)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.DateOfBirth, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.DateOfBirth)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.IdentityPapersNumber, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.IdentityPapersNumber)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.PrimaryResidence, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.PrimaryResidence)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.Street, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.Street)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.Town, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.Town)
                                     }
                                })
                            </div>
                            <div class="form-label-group">
                                @Html.EditorFor(m => m.PostalCode, new
                                {
                                    htmlAttributes =
                                new
                                     {
                                         @class = "form-control input-sm",
                                placeholder = @Html.DisplayNameFor(m => m.PostalCode)
                                     }
                                })
                            </div>
                            <div class="fa fa-google mr-2">
                                <input type="submit" class="btn btn-lg btn-google btn-block text-uppercase" value="Register" />
                            </div>
                            @*<button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fa fa-google mr-2"></i> Sign up with Google</button>
                                <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fa fa-facebook-f mr-2"></i> Sign up with Facebook</button>
                            *@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>}@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }