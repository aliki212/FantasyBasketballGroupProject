@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutW.cshtml";
}
<!-- Masthead-->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Your Favorite Source of Fantasy Basketball</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">Begin your journey to find out if you got what it takes to win</p>
                <a class="btn btn-primaryF btn-xl js-scroll-trigger" href="@Url.Action("About", "Home")">Find Out More</a>
            </div>
        </div>
    </div>
</header>

<!--End Masthead -->
<!-- About section-->
<section class="page-section bg-primaryF ">
    <div class="container">
        <div class="row h-100 justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">We've got what you need!</h2>
                <hr class="divider light my-4" />
                <p class="text-white-50 mb-4">Fantasy Betting has all the stats and tools you need to fire up your quest to be the next Prime coach! Try your skills and hone your talent for your basketball management dream to come true! No strings attached!</p>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="@Url.Action("Register","Account")">Get Started!</a>
            </div>
        </div>
    </div>
</section>
<!-- End About Section -->
<!-- Services section-->
<section class="page-section" id="services">
    <div class="container">
        <h2 class="text-center mt-0">At Your Service</h2>
        <hr class="divider my-4" />
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-gem text-primaryF mb-4"></i>
                    <h3 class="h4 mb-2">Excellent Service</h3>
                    <p class="text-muted mb-0">Have all your stats and details in one place.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-laptop-code text-primaryF mb-4"></i>
                    <h3 class="h4 mb-2">Up to Date</h3>
                    <p class="text-muted mb-0">Keep track of all the latest news and games.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-globe text-primaryF mb-4"></i>
                    <h3 class="h4 mb-2">Be connected</h3>
                    <p class="text-muted mb-0">Have your friends join your league and compete for prizes!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fas fa-4x fa-sort-amount-up-alt text-primaryF mb-4"></i>
                    <h3 class="h4 mb-2">Rank Up</h3>
                    <p class="text-muted mb-0">Get your skills to skyrocket your team.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Services Section -->
<script src="https://use.fontawesome.com/releases/v5.12.1/js/all.js" crossorigin="anonymous"></script>